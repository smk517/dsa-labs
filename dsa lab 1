
#include<iostream>
using namespace std;
int main(){
	int size=8;
	int arr[8]={1,2,3,4,5,6,7,8};
	cout<<"the array is:"<<endl;
	for(int i=0;i<size;i++){
		cout<<arr[i]<<endl;
	}
	cout<<"the array after removing element from start"<<endl;
	for(int i=1;i<size;i++){
		cout<<arr[i]<<endl;
	}
	cout<<"the array after removing element from end"<<endl;
	for(int i=0;i<size-1;i++){	
	cout<<arr[i]<<endl;
	
	}
	return 0;
}

#include<iostream>
using namespace std;
int main(){
	int size =8;
int arr[8]={1,2,3,4,5,6,7,8};
cout<<"the  original array is:"<<endl;
	for(int i=0;i<size;i++){
		cout<<arr[i]<<endl;
	}
	cout<<"the reversed array is:"<<endl;
	for(int i=7;i>=0;i--){
	cout<<arr[i]<<endl;
}
return 0;
}

#include<iostream>
using namespace std;
int main(){
	int size =8;
	int index;
	int new_value;
int arr[8]={1,2,3,4,5,6,7,8};
cout<<"the  original array is:"<<endl;
	for(int i=0;i<size;i++){
		cout<<arr[i]<<endl;
	}
	cout<<"enter the index to update"<<endl;
	cin>>index;
	if(index<0||index>=5){
		cout<<"invalid index"<<endl;
		return 1;
	}
	cout<<"enter the new value"<<endl;
	cin>>new_value;
	arr[index]=new_value;
	cout<<"the updated array is"<<endl;
	for(int i=0;i<size;i++){
		cout<<arr[i]<<endl;
	}
	return 0;
}
	
